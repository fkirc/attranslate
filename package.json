{
  "name": "attranslate",
  "version": "0.9.1",
  "description": "Translate any website or app. Convert between file formats.",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fkirc/attranslate.git"
  },
  "keywords": [
    "semi-automated translation",
    "google-translate",
    "website translation",
    "mobile app translation",
    "cross-platform translation",
    "i18n",
    "react-i18next"
  ],
  "license": "MIT",
  "author": "Felix Kirchengast",
  "bugs": {
    "url": "https://github.com/fkirc/attranslate/issues"
  },
  "homepage": "https://github.com/fkirc/attranslate#readme",
  "bin": {
    "attranslate": "bin/attranslate"
  },
  "main": "./dist/index.js",
  "files": [
    "bin/",
    "dist/"
  ],
  "scripts": {
    "build": "yarn run clean && tsc",
    "clean": "rimraf ./dist",
    "lint": "yarn run eslint",
    "reformat": "yarn run eslint -- --fix",
    "eslint": "./node_modules/.bin/eslint '**/*.{js,ts,tsx}' --ignore-path=.gitignore",
    "preTest": "jest --runTestsByPath test/setup/prepare-gcloud-keys.test.ts",
    "test": "jest",
    "test:generate_refs": "GENERATE_REFS=True yarn run test",
    "prepublishOnly": "git diff --exit-code"
  },
  "dependencies": {
    "@google-cloud/translate": "^6.0.3",
    "commander": "^6.1.0",
    "detect-indent": "^6.0.0",
    "inquirer": "^7.3.3",
    "messageformat-parser": "^4.1.0",
    "prettify-xml": "^1.2.0",
    "xml2json": "^0.12.0"
  },
  "devDependencies": {
    "@types/inquirer": "^7.3.1",
    "@types/jest": "^26.0.14",
    "@types/lodash": "^4.14.162",
    "@types/node": "^14.11.8",
    "@types/node-fetch": "^2.1.6",
    "@types/xml2json": "^0.11.3",
    "@typescript-eslint/eslint-plugin": "^4.4.0",
    "@typescript-eslint/parser": "^4.4.0",
    "eslint": "^7.11.0",
    "eslint-config-prettier": "^6.12.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.3.0",
    "jest": "^26.5.2",
    "lint-staged": "^10.4.0",
    "node-fetch": "^2.3.0",
    "prettier": "^2.1.2",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.4.1",
    "typescript": "^4.0.3"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "node_modules/.bin/eslint --ignore-path=.gitignore --fix"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "node_modules/.bin/lint-staged"
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "jest": {
    "preset": "ts-jest",
    "roots": [
      "test"
    ]
  }
}
